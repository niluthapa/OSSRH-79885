<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
<Appenders>
<Console name="Console" target="SYSTEM_OUT">
<PatternLayout pattern="%-5p %d [%t] %c: %m%n"/>
</Console>
</Appenders>

<Loggers>
<Logger name="org.poc.App" level="INFO"/>
<Logger name="org.poc.App" level="DEBUG"/>,
<Logger name="org.poc.App" level="TRACE"/>
<Root level="INFO">
<AppenderRef ref="Console" />
</Root>
</Loggers>
</Configuration>
